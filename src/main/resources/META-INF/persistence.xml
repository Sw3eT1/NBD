<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="LibraryUnit" transaction-type="RESOURCE_LOCAL">
      <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

      <!-- Encje -->
      <class>library.Book</class>
      <class>library.BookCopy</class>
      <class>library.Employee</class>
      <class>library.Reader</class>
      <class>library.Library</class>
      <class>library.Rental</class>

      <!-- Embeddables -->
      <class>library.Address</class>

      <properties>
          <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
          <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/Library"/>
          <property name="jakarta.persistence.jdbc.user" value="nbd"/>
          <property name="jakarta.persistence.jdbc.password" value="nbdpassword"/>

          <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
          <property name="hibernate.hbm2ddl.auto" value="update"/>
          <property name="hibernate.show_sql" value="false"/>
          <property name="hibernate.format_sql" value="true"/>
          <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
          <property name="hibernate.connection.isolation" value="2"/>
      </properties>
  </persistence-unit>
</persistence>
