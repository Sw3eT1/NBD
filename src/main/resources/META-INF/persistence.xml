<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="LibraryUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>myLibrary.Book</class>
        <class>myLibrary.BookCopy</class>
        <class>myLibrary.Employee</class>
        <class>myLibrary.Reader</class>
        <class>myLibrary.Library</class>
        <class>myLibrary.Rental</class>
        <class>myLibrary.ReaderType</class>
        <class>myLibrary.BookAllowedReaderType</class>
        <class>myLibrary.Person</class>
        <class>myLibrary.ReaderTypeAdult</class>
        <class>myLibrary.ReaderTypeKid</class>
        <class>myLibrary.ReaderTypeTeenager</class>
        <class>myLibrary.Address</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://postgres:5432/nbddb"/>
            <property name="jakarta.persistence.jdbc.user" value="nbd"/>
            <property name="jakarta.persistence.jdbc.password" value="nbdpassword"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.use_sql_comments" value="false"/>

            <property name="hibernate.jdbc.log.warnings" value="false"/>
            <property name="hibernate.jdbc.batch_versioned_data" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
